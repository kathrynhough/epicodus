<%= content_for(:title, "Home") %>

 <!-- Nav Bar -->

<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
      <h1><%= link_to "HackerTalk", root_path %></h1>
    </li>
    <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
  </ul>

  <section class="top-bar-section">

    <!-- Right Nav Section -->

    <ul class="right">
       <% if current_user %>
      <li class="active">Logged in as <%= link_to current_user.email, user_path(current_user) %></li>
      <li class="active"><%= link_to "Log Out", logout_path %></li>
        <% else %>
      <li class="active"><%= link_to "Sign In", login_path %></li>
      <li class="active"><%= link_to "Sign Up", signup_path %></li>
      <% end %>


      <li class="has-dropdown">
        <a href="#">Right Button Dropdown</a>
        <ul class="dropdown">
          <li><a href="#">First link in dropdown</a></li>
        </ul>
      </li>
    </ul>

    <!-- Left Nav Section -->

    <ul class="left">
      <li><a href="#">Left Nav Button</a></li>
    </ul>
  </section>
</nav>

 <!-- Page Content -->

<div class="row">
  <h3>Get an Answer to Any Web Development Question</h3>
</div>
<div class="row">
  <div class="small-4 large-4 columns"><%= image_tag("tech.jpg", class: "cover-image") %> <%= link_to "Ask a Question", questions_path %> </div>
  <div class="small-4 large-4 columns"><%= image_tag("questions.jpg", class: "cover-image") %><%= link_to "Get an Answer", questions_path %> </div>
  <div class="small-4 large-4 columns"><%= image_tag("hacker.jpg", class: "cover-image") %><%= link_to "Meet Hackers Like You", users_path %> </div>
</div>



