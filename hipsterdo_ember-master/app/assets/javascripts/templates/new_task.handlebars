<h1>New task</h1>

<form>
  <div class="form-group">
    <label for="name">Name</label>
    {{input type="text" id="name" class="form-control" value=name}}
  </div>
  <div class="form-group">
    <label for="description">Email</label>
    {{input type="text" id="description" class="form-control" value=description}}
  </div>

  <button {{action createTask}} class="btn btn-default">Create task</button>
</form>
