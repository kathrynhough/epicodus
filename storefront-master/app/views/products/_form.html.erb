<%= form_for @product, :html => { :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Product Name" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, placeholder: "Product Description" %>
  </div>
  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, placeholder: "$0.00" %>
  </div>
  <div class="form-group">
    <%= f.label :productimage %>
    <%= f.file_field :productimage %>
  </div>
  <%= f.submit class: "button" %>
  <% end %>
